<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@color/background">

            <ImageView
                android:id="@+id/LocationIcon"
                android:scaleType="centerCrop"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:contentDescription="location image for element in list"
                android:src="@mipmap/ic_list_icon_foreground"
                tools:ignore="HardcodedText,RtlSymmetry"/>

            <TextView
                android:id="@+id/reminderAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/address_reminder"
                android:textColor="@color/outlineColor"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/LocationIcon" />

            <TextView
                android:id="@+id/reminderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="4dp"
                android:text="@string/reminder_title"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/LocationIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/editIcon"
                android:layout_width="77dp"
                android:padding="15dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_edit_foreground"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/starIcon"
                android:layout_width="77dp"
                android:layout_height="0dp"
                android:padding="15dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_star_empty_icon_foreground"
                app:layout_constraintEnd_toStartOf="@id/editIcon"
                tools:layout_editor_absoluteY="0dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>